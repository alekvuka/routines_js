
<h2>Log In</h2>

<% if flash[:alert] != nil %>

  <b>!!!---<%=flash[:alert]%>---!!!</b>
  <br>
  <br>
<%end%>

<%= form_for(:session, url: login_path) do |f| %>

  <%= f.label :username %>
  <%= f.text_field :username%> <br>

  <%= f.label :password %>
  <%= f.password_field :password%><br>

  <%= f.submit "Log in"%>
<% end %>

<%= link_to('Log in with Google!', '/auth/google_oauth2') %>

<h2>Or</h2>


<%= link_to('Sign Up', new_user_path) %>
